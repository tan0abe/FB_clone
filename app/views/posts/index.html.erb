<% @posts.each do |post| %>
  <div class="index_content">
    <ul>
      <li><%= "ユーザー名：#{post.user.name}" %></li>
      <li><%= "タイトル：#{post.title}"%></li>
      <li><%= "コメント：#{post.content}"%></li>
      <li><%=  link_to image_tag(post.image_path.url), post_path(post.id) %></li>
      <%= link_to "投稿を編集する", edit_post_path(post.id), class: 'btn btn-success' if post.user_id == current_user.id %>
      <%= link_to "投稿を削除する", post_path(post.id), method: :delete, data: {confirm: "削除していいですか？" }, class: 'btn btn-danger' if post.user_id == current_user.id %>
    </ul>
  </div>
<% end %>