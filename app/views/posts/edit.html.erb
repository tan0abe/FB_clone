<%= form_with(model: @post, local: true,) do |form| %>

  <div class="post_content">
    <%= form.label :title %>
    <%= form.text_field :title %>

    <%= form.label :content %>
    <%= form.text_field :content %>

    <%= form.label :画像 %>
    <%= form.file_field :image_path %>

    <strong>画像:</strong>
    <%= image_tag @post.image_path.url %>
  </div>
  <%= form.submit %>
<% end %>

<%= link_to "投稿一覧画面にもどる", posts_path %>